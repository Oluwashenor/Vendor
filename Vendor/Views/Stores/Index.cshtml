@model Vendor.Models.ViewModels.StoreIndexViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Stores</h1>

<br />

<p>
    @if (Model.Store.Count() == 0)
    {
        if (Model.User.MaxStores > 0)
        {
            <a class="btn btn-primary" asp-action="Create">Create New Store</a>
        }
        else
         {

         }

    }
    else if (Model.Store.Count() < Model.User.MaxStores)
    {
        <a class="btn btn-primary" asp-action="Create">Create New Store</a>
    }
    else
    {

    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Name
            </th>
            <th>
               Description
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Store) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
