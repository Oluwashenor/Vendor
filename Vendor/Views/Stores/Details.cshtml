@model Vendor.Models.DTOs.StoreDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Store</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Outlets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Outlets)
        </dd>

        @if (User.IsInRole("UncleShenor"))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Store.IsActive)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Store.IsActive)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Store.IsLocked)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Store.IsLocked)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Store.IsDeleted)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Store.IsDeleted)
            </dd>
        }

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Store.Id">Edit</a> |
    <a asp-action="Index">Back </a> |
    <a asp-action="Index" asp-route-storeId="@Model.Store.Id" asp-controller="Outlets">Outlets</a>
</div>
