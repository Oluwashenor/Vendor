@model Vendor.Models.ViewModels.UserIndexViewModel


<div class="row">
    <h3>Users</h3>
</div>

<div class="container">
    @if(Model.Users.Count() > 0)
            {
    <table class="table table-striped">
        <tr>
            <td>ID</td>
            <td>Email</td>
            <td>Name</td>
            <td>Role</td>
            <td>Max Stores</td>
            <td>Actions</td>

        </tr>
        @foreach (var user in Model.Users)
        {
    <tr>
        <td>1</td>
        <td>@user.Email</td>
        <td>@user.UserName</td>
        <td>@user.Role</td>
        <td>@user.MaxStores</td>
        <td>
            <div class="text-center">
                <form asp-action="Delete" asp-route-userId="@user.Id">
                    <a asp-action="Edit" asp-route-userId="@user.Id" class="btn btn-info text-white" style="cursor:pointer"> Edit </a>
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this')" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </td>
    </tr>
        }
    </table>
            }
</div>