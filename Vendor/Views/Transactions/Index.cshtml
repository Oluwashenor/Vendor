@using static Vendor.Utilities.Enums
@model Vendor.Models.ViewModels.TransactionIndexViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Transactions</h1>
<br />

<p>
    <a class="btn btn-primary" asp-route-outletId="@Model.OutletId" asp-controller="Sales" asp-action="Create">Create New Sale</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Outlet
            </th>
           
            <th>
               Cashier
            </th>
            <th>
             TransactionTime
            </th>
             <th>
             Payment Type
            </th>
             <th>
               Cost
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Transactions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Outlet.Name)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Cashier.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionTime)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.PaymentType)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
